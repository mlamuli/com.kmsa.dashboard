<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		id="myPopover"
		title="Signature Pad"
		class="sapUiContentPadding"
		showCloseButton="true"
		showHeader="true"
		placement="Top" >
		<beginButton>
		    <Button text="Sign" press="onSign" />
			
		</beginButton>
		<endButton>
			<Button text="Save" press="handleCloseButton" />
		</endButton>
		<content>
			<Button text="Done" press="onDone" />
			<core:HTML id="html"  content='&lt;canvas id=&quot;signature-pad&quot; width=&quot;400px&quot; height=&quot;400px&quot; class=&quot;signature-pad&quot;&gt;&lt;/canvas&gt;'>
            </core:HTML>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>